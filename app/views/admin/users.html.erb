<%= form_tag(
  controller: 'admin',
  action: 'update_users',
  method: 'post') do %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Local User</th>
        <th scope="col">Linked Record</th>
        <th scope="col">Admin</th>
      </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.display_name %></td>
        <td>
          <%= select_record_link(user, @members) %>
          <br>
          <span class='text-muted'>
            <%= user.record_link || 'No Record Linked' %>
          </span>
        </td>
        <td>
          <%= 
            check_box_tag 'role_ids[]', 
              'admin', 
              user.roles.include?('admin'),
              class: 'form-control' 
          %>
      </tr>
    <% end %>
      <tr>
        <td></td>
        <td></td>
        <td>
          <%= 
            button_tag "Save Changes", 
              data: {
                disable_with: 'Please wait...'
              },
              class: 'btn btn-primary'
          %>
        </td>
    </tbody>
  </table>
<% end %>
