<h1>Attendance Report for <%= @member_name %></h1>
<%= form_tag(
    { controller: 'attendance_report', action: 'generate_pdf'},
    { method: 'post', target: '_blank' }
  ) do %>
  <input type="hidden" name="member" value="<%= params[:member] %>">
  <button type="submit" class="btn btn-primary">Download PDF</button>
<% end %>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Date</th>
      <th scope="col">Name</th>
      <th scope="col">Venue</th>
      <th scope="col">Point Members</th>
      <th scope="col">Reporting Member</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
    <tr>
      <td><%= event[:date] %></td>
      <td><%= event[:name] %></td>
      <td><%= event[:venue] %></td>
      <td><%= event[:point_members].nil? ? nil : event[:point_members].join(',')  %></td>
      <td><%= event[:reporting_member] %></td>
    </tr>
    <% end %>
  </tbody>
</table>
