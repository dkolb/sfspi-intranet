<h1>Individual Attendance Report</h1>
<%= form_tag(
      controller: 'attendance_report',
      action: 'generate',
      method: 'post'
    ) do %>
  <div class="form-group">
    <%= label_tag "member_selection", "Member to Generate Report For" %>
    <%= select(
          'member', 
          'selection', 
          options_for_select(
            @records,
            @selected
          ),
          {},
          {
            class: 'form-control'
          }
        ) %>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
<% end %>
