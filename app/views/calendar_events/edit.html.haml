%h1 Editing Calendar Event

.d-flex.justify-content-end.my-2
  = link_to 'Show', calendar_event_path(@calendar_event.id), 
    class: 'btn btn-primary mx-2'
  = link_to 'Delete', calendar_event_path(@calendar_event.id),
    data: { confirm: 'Are you sure you want to delete this event?' },
    method: :delete, class: 'btn btn-danger mx-2'
  = link_to 'Back', calendar_events_path, class: 'btn btn-primary mx-2'

= render partial: 'form', locals: { submit_text: 'Update Event',
  url: {controller: 'calendar_events', action: 'update', id: @calendar_event.id},
  method: :put}
