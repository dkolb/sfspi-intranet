!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "utf-8"}/
    = inline_remote_stylesheet 'https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css'
    = inline_remote_stylesheet 'https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.2/css/bootstrap-select.min.css'
    :css
      table {
        page-break-inside:auto;
        width: 100%;
      }
      tr  { 
        page-break-inside:avoid; 
        page-break-after:auto;
      }
      thead {
        display:table-header-group
      }
      tfoot { 
        display:table-footer-group
      }
      a {
        color: inherit;
      }
      /* declare a 7 column grid on the table */
      #calendar {
        width: 100%;
        table-layout: fixed;
      }

      #calendar tr, #calendar tbody, #calendar thead {
        grid-column: 1 / -1;
        display: grid;
        grid-template-columns: repeat(7, 1fr);
        width: 100%;
      }

      caption {
        text-align: center;
        grid-column: 1 / -1;
        font-size: 130%;
        font-weight: bold;
        padding: 10px 0;
      }

      #calendar td, #calendar th {
        padding: 5px;
        box-sizing:border-box;
        border: 1px solid #ccc;
      }

      #calendar .weekdays {
      }

      #calendar .weekdays th {
        text-align: center;
        text-transform: uppercase;
        line-height: 20px;
        border: none !important;
        padding: 10px 6px;
        font-size: 13px;
      }

      #calendar td {
        height: 180px;
        display: flex;
        flex-direction: column;
      }

      #calendar .days li:hover {
        background: #d3d3d3;
      }

      #calendar .date {
        text-align: center;
        margin-bottom: 5px;
        padding: 4px;
        background: #333;
        color: #fff;
        width: 30px;
        border-radius: 50%;
        flex: 0 0 auto;
        align-self: flex-end;
      }

      #calendar .event {
        flex: 0 0 auto;
        font-size: 13px;
        border-radius: 4px;
        padding: 5px;
        margin-bottom: 5px;
        line-height: 14px;
        border: 1px solid gray('500');
        text-decoration: none;
      }

      #calendar .event-desc {
        margin: 3px 0 7px 0;
        text-decoration: none;	
      }

      #calendar .prev-month, #calendar .next-month {
        background-color: #ced4da;
        color: #666;
      }

      #calendar .prev-month .event {
        display: none;
      }

      .event.holiday-event {
        background-color: #fdf1f2;
      }

      .event.normal-event {
        //background: rgba(180, 220, 220, 0.5);
        background-color: #daeeed;
      }

      .event.birthday-event {
        background-color: #d4e6f7;
      }

      #calendar .event.unapproved-event {
        background-image: url('warning.svg');
        background-repeat: no-repeat;
        background-position: right 3px top 3px;
        background-attachment: local;
      }

      #event-details {
        table-layout: fixed;
      }

      #event-details th {
        width: 30%;
      }

      .page-break { 
        display: block;
        clear: both;
        page-break-after: always;
      }
    = inline_remote_js 'https://code.jquery.com/jquery-3.3.1.slim.min.js'
    = inline_remote_js 'https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js'
    = inline_remote_js 'https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js'
    :javascript
      $(document).ready(function() {
        $('a').contents().unwrap()
      })
  %body
    #content
      = yield
